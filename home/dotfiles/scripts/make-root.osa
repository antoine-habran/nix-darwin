tell application "Privileges"
activate
    delay 0.5 -- macOS animations are too slow :(
    tell application "System Events"
        tell process "Privileges"
            set requestButton to button 2 of window 1
            if (name of requestButton) contains "Request" then
                click requestButton
                return
            end if

            set cancelButton to button 1 of window 1
            click cancelButton
        end tell
    end tell
end tell
